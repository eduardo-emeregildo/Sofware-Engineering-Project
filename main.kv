<GridLayout>:
    rows: 3
    cols: 1

    spacing: '20dp'

    RelativeLayout:
        canvas.before:
            Color:
                rgba : 0, 1, 0, 1

        Button:
            text: "Login"
            font_size: "20sp"
            background_color: (1, 0.5, 0.6, 1)
            color: (1, 1, 1, 1)
            size_hint: (0.20, 0.2)
            pos_hint: {"top": 1 , "left" : 1}

        Button:
            text: "Sign Up"
            font_size: "20sp"
            background_color: (1, 0.8, 1, 1)
            color: (1, 1, 1, 1)
            size_hint: (0.20, 0.2)
            pos_hint: {"top" : 1, "right" : 1}

        Label:
            text : "Email: "
            pos: (-215, -5)

        TextInput:
            text: "Email"
            on_touch_down: self.text = ''
            multiline: False
            font_size: "20sp"
            background_color: (1, 1, 1, 0.5)
            color: (1, 1, 1, 1)
            size_hint: (0.40, 0.15)
            pos: (240, 80)

        Label:
            text : "Password: "
            pos: (-215, -44)

        TextInput:
            text: "Password"
            on_touch_down: self.text = ''
            multiline: False
            font_size: "20sp"
            background_color: (1, 1, 1, 0.5)
            color: (1, 1, 1, 1)
            size_hint: (0.40, 0.15)
            pos: (240, 40)

    FloatLayout:
        Label:
            text : "Top Projects "
            pos: (0, 270)

        Label:
            text: "Project Name"
            pos: (-200, 200)

        Label:
            text: "Description desc desc desc desc \n desc desc desc desc desc desc desc"
            halign: 'left'
            pos: (0, 160)

        Label:
            text: "Group Name"
            pos: (200, 120)



        Label:
            text: "Project Name"
            pos: (-200,80)

        Label:
            text: "Description desc desc desc desc \n desc desc desc desc desc desc desc"
            halign: 'left'
            pos: (0, 40)

        Label:
            text: "Group Name"
            pos: (200, 0)

        Label:
            text : "Top Users "
            pos: (0, -40)

    BoxLayout:
        Button:
            text: "User4"
            background_color: (1, 0.5, 0.6, 1)
            size_hint: (0.20, 0.2)
        Button:
            text: "User1"
            background_color: (1, 0.5, 0.6, 1)
            size_hint: (0.20, 0.2)
        Button:
            text: "User2"
            background_color: (1, 0.5, 0.6, 1)
            size_hint: (0.20, 0.2)
        Button:
            text: "User3"
            background_color: (1, 0.5, 0.6, 1)
            size_hint: (0.20, 0.2)